---
interface Props {
  title: string,
  experience: any,
}
const { title, experience } = Astro.props;
const EXPERIENCE = experience;
---
<section id="experience" class="py-16 px-4 flex flex-col items-center justify-center">
    <h2 class="text-[3rem] md:text-[4.5rem] mb-10 hightlight-text text-center font-bold">{title}</h2>
    <ol class="relative border-s" style="border-image: linear-gradient(4deg, #0af019, #0088ff) 1;">
      {EXPERIENCE.map((job: any) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 box-before rounded-full mt-1.5 -start-1.5 border"></div>
          
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white-500">
            {job.start} â€“ {job.end}
          </time>
          
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white/70">
            {job.company} | {job.position}
          </h3>
          
          <p class="mb-2 text-base font-normal text-gray-500 dark:text-gray-400">
            {job.description}
          </p>
          
          <ul class="mb-4 flex flex-wrap gap-2 text-sm text-gray-700 dark:text-gray-300">
            {job.technologies.map((tech: string) => (
              <li class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">{tech}</li>
            ))}
          </ul>
        </li>
      ))}
    </ol>
</section>
