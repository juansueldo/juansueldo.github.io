---
import ButtonsTheme from "./ButtonsTheme.astro";
import Sun from "./icons/Sun.astro";
import Moon from "./icons/Moon.astro";
import System from "./icons/System.astro";

interface Props {
  light: string
  dark: string
  system: string
}
const { light, dark, system } = Astro.props;
---

<li class="relative">
    <button id="theme-toggle" class="text-lg text-black dark:text-white p-2 focus:outline-none rounded-lg hover:bg-gray-100 dark:hover:bg-[#1c1b1b] transition-colors flex items-center justify-center">
        <span id="theme-icon">
            <Sun id="icon-light" class="w-5 h-5 hidden" />
            <Moon id="icon-dark" class="w-5 h-5 hidden" />
            <System id="icon-system" class="w-5 h-5 hidden" />
        </span>
    </button>
    <div id="theme-dropdown" class="absolute right-0 mt-2 w-40 bg-white dark:bg-[#1b1b1b] rounded-lg shadow-lg border border-gray-200 dark:border-[#1c1b1b] hidden z-10">
        <ButtonsTheme light={light} dark={dark} system={system}/>
    </div>
</li>