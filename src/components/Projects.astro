---
import Cards from "./Cards.astro"
interface Props {
  title: string,
  projects: any,
}
const { title, projects } = Astro.props;
---
<section id="projects" class="py-16 px-4 flex flex-col items-center justify-center">
  <h2 class="text-[3rem] md:text-[4.5rem] hightlight-text text-center mb-12 font-bold">{title}</h2>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <Cards projects={projects}/>
    </div>
  </div>
</section>
