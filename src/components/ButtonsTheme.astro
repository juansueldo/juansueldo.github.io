---
import Sun from "./icons/Sun.astro";
import Moon from "./icons/Moon.astro";
import System from "./icons/System.astro";
interface Props {
  light: string
  dark: string
  system: string
}

const { light, dark, system } = Astro.props
---
<button data-theme="light" class="flex items-center w-full text-left px-4 py-2 text-black dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-t-lg transition-colors">
   <Sun/>
    {light}
</button>
<button data-theme="dark" class="flex items-center w-full text-left px-4 py-2 text-black dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
    <Moon/>
    {dark}
</button>
<button data-theme="system" class="flex items-center w-full text-left px-4 py-2 text-black dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-b-lg transition-colors">
    <System/>
    {system}
</button>
